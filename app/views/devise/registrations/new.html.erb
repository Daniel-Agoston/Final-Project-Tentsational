<!--# sign up page-->

<div class="box11 p-5 flex-column min-vh-100">
  <div class="form-card">
<h2 class="text-white">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="form-inputs">
  <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email", class: 'form-control rounded-3' },
              label_html: { class: "text-white" } %>

  <%= f.input :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                hint_html: { class: 'text-white' },
              input_html: { autocomplete: "new-password", class: 'form-control rounded-3' },
              label_html: { class: "text-white" } %>

  <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password", class: 'form-control rounded-3' },
              label_html: { class: "text-white" } %>
</div>

    <div class="form-actions">
      <%= f.button :submit, 'Sign up', class: 'btn btn-info w-100 rounded-3 fw-bold mb-4'%>
    </div>
  <% end %>

  </div>
</div>
