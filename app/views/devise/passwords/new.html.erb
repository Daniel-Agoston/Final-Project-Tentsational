<div class="box12 p-5 flex-column min-vh-100">
  <div class="form-card">
<h2 class="text-white">Forgot your password?</h2>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>


  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control rounded-3' },
              label_html: { class: "text-white" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Send me reset password instructions', class: 'btn btn-info w-100 rounded-3 fw-bold mb-4' %>
  </div>
<% end %>

<div class="mb-5"></div>
</div>
</div>
